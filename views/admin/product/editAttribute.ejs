<%- include("../bread") %>
    <%- include("../aside") %>

        <!-- form start -->
        <div class="container">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">
                        <%= bread %>
                    </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" action="/admin/editAtrr" method="POST">
                    <%- include("../../includes/message") %>
                        <%- include("../../includes/errors") %>
                            <div class="card-body">
                                <input type="hidden" value="<%= id %>" name="id">
                                <div class="form-group">
                                    <label for="title">قیمت</label>
                                    <input type="" name="price" class="form-control"
                                        placeholder="قیمت محصول را وارد کنید" value="<%= attr.price %>">
                                </div>
                                <div class="form-group">
                                    <label for="title">تخفیف</label>
                                    <input type="" name="offerPrice" class="form-control"
                                        placeholder="تخفیف محصول را وارد کنید" value="<%= attr.offerPrice %>">
                                </div>
                                <div class="form-group">
                                    <label for="title">تعداد</label>
                                    <input type="" name="count" class="form-control"
                                        placeholder="تعداد موجودی محصول را وارد کنید" value="<%= attr.count %>">
                                </div>
                                <div class="form-group">
                                    <label>رنگ محصول:</label>
                                    <input type="color" name="color" value="<%= attr.color %>"">
                                </div>
                                <div class=" form-group">
                                    <label>
                                        <input type="checkbox" name="discount">
                                        تخفیف دارد ؟
                                    </label>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ویرایش ویژگی محصول</button>
                            </div>


                </form>
            </div>
        </div>