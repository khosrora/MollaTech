<%- include("../bread") %>
    <%- include("../aside") %>

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <%= title %>
                    </h3>
                    <%- include("../../includes/message") %>
                        <form class="card-tools" action="/admin/getAllProduct" method="get">
                            <div class="input-group input-group-sm" style="width: 300px;">
                                <input type="text" name="search" class="form-control float-right"
                                    placeholder="نام محصول">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover">
                        <tr>
                            <th>نام</th>
                            <th>ایجاد کننده محصول</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                        <% for (product of products) {%>
                            <tr>
                                <td>
                                    <%= truncate( product.title , 30) %>
                                </td>
                                <td>
                                    <%= product.user.fullname %>
                                </td>
                                <td>
                                    <% if(product.isActive){%>
                                        <a href="/admin/isActive/<%= product._id %>"
                                            class="btn btn-sm btn-success">فعال</a>
                                        <%}else {%>
                                            <a href="/admin/isActive/<%= product._id %>"
                                                class="btn btn-sm btn-danger">غیر فعال</a>
                                            <%}%>
                                </td>
                                <td>
                                    <a href="/admin/singleProduct/<%= product._id %>"
                                        class="btn btn-sm btn-success">مشاهده</a>
                                    <a href="/admin/editProduct/<%= product._id %>"
                                        class="btn btn-sm btn-warning text-white">ویرایش</a>
                                </td>
                            </tr>
                            <%}%>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>